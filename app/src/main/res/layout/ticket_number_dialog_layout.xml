<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:id="@+id/ticketnumbertitle"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <include layout="@layout/order_line"></include>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/ticketnumber_tv1"
                    android:text="两联 (默认)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/ticketnumber_tv2"
                    android:layout_marginTop="10dp"
                    android:text="三联"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/ticketnumber_tv3"
                    android:layout_marginTop="10dp"
                    android:text="顾客联"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/ticketnumber_tv4"
                    android:layout_marginTop="10dp"
                    android:text="商户联"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/ticketnumber_tv5"
                    android:layout_marginTop="10dp"
                    android:text="提货联"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioGroup
                    android:layout_marginLeft="210dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/ticketnumber_1"

                        android:button="@null"
                        android:background="@drawable/radiobutton_select"
                        android:layout_width="18dp"
                        android:layout_height="18dp" />
                    <RadioButton
                        android:id="@+id/ticketnumber_2"

                        android:layout_marginTop="11dp"
                        android:button="@null"
                        android:background="@drawable/radiobutton_select"
                        android:layout_width="18dp"
                        android:layout_height="18dp" />
                    <RadioButton
                        android:id="@+id/ticketnumber_3"
                        android:layout_marginTop="10dp"
                        android:button="@null"
                        android:background="@drawable/radiobutton_select"
                        android:layout_width="18dp"
                        android:layout_height="18dp" />
                    <RadioButton
                        android:id="@+id/ticketnumber_4"
                        android:layout_marginTop="9dp"
                        android:button="@null"
                        android:background="@drawable/radiobutton_select"
                        android:layout_width="18dp"
                        android:layout_height="18dp" />
                    <RadioButton
                        android:id="@+id/ticketnumber_5"

                        android:layout_marginTop="12dp"
                        android:button="@null"
                        android:background="@drawable/radiobutton_select"
                        android:layout_width="18dp"
                        android:layout_height="18dp" />

                </RadioGroup>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_cancel"
                android:background="@drawable/button_cancle_select"
                android:textColor="@color/titlecolor"
                android:text="取消"
                android:layout_width="100dp"
                android:layout_height="35dp" />
            <Button
                android:id="@+id/btn_confirm"
                android:layout_marginLeft="30dp"
                android:background="@drawable/button_select"
                android:textColor="@color/white"
                android:text="确定"
                android:layout_width="100dp"
                android:layout_height="35dp" />
        </LinearLayout>
    </LinearLayout>
