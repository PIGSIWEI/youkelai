<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:gravity="center"
        android:background="#52c2e7"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/linearlayoutbg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/et_search"
                android:hint="点击查询订单"
                android:textSize="12dp"
                android:layout_marginRight="10dp"
                android:singleLine="true"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_wx_order"
            android:clickable="true"
            android:background="@drawable/select_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/icon_wx"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:text="查看微信订单"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginRight="15dp"
                android:layout_gravity="center"
                android:background="@drawable/right_arrow"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </LinearLayout>

        <ImageView

            android:background="@color/color3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
        <LinearLayout
            android:id="@+id/ll_ali_order"
            android:clickable="true"
            android:background="@drawable/select_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/icon_ali"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:text="查看支付宝订单"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginRight="15dp"
                android:layout_gravity="center"
                android:background="@drawable/right_arrow"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </LinearLayout>

        <ImageView
            android:background="@color/color3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
        <LinearLayout
            android:id="@+id/ll_xcx_order"
            android:clickable="true"
            android:background="@drawable/select_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/icon_xcx"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:text="查看小程序订单"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginRight="15dp"
                android:layout_gravity="center"
                android:background="@drawable/right_arrow"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </LinearLayout>

        <ImageView
            android:background="@color/color3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" />
        <LinearLayout
            android:id="@+id/ll_app_order"
            android:clickable="true"
            android:background="@drawable/select_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/ic_launcher"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:text="查看APP订单"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginRight="15dp"
                android:layout_gravity="center"
                android:background="@drawable/right_arrow"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="30dp"
        android:id="@+id/ll_app_money"
        android:clickable="true"
        android:background="@drawable/select_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/icon_order_money"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:text="查看现金订单"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginRight="15dp"
            android:layout_gravity="center"
            android:background="@drawable/right_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </LinearLayout>
    <ImageView
        android:background="@color/color3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
    <LinearLayout
        android:id="@+id/ll_cash_order"
        android:clickable="true"
        android:background="@drawable/select_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/icon_cash_order"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:text="现金生成付款订单"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginRight="15dp"
            android:layout_gravity="center"
            android:background="@drawable/right_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </LinearLayout>


   </LinearLayout>

