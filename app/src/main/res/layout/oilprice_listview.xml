<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/order_line"></include>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <TextView
          android:textSize="15dp"
          android:layout_marginBottom="15dp"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="15dp"
          android:text="油品信息"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
      <TextView
          android:id="@+id/oil_name"
          android:layout_marginRight="10dp"
          android:layout_marginTop="12dp"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:textSize="20dp"
          android:layout_alignParentRight="true"
          android:text="92#汽油"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
  </RelativeLayout>
    <include layout="@layout/order_line"></include>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="国家价"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/oil_country"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            android:text="7.05元/升"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginBottom="15dp"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:text="油机价:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/oil_car"
            android:layout_marginRight="10dp"
            android:layout_marginTop="40dp"
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            android:text="6.55元/升"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginBottom="15dp"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="65dp"
            android:text="自定义油价:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_vip_oil_price"
            android:layout_marginRight="10dp"
            android:layout_marginTop="65dp"
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            android:text="3.55元/升"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <include layout="@layout/order_line"></include>
    <LinearLayout
        android:id="@+id/change_oil_price"
        android:background="@drawable/select_bg"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="15dp"
            android:textColor="@color/titlecolor"
            android:text="修改油价"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <include layout="@layout/order_line"></include>
</LinearLayout>
