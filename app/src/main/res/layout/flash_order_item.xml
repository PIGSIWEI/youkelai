<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:id="@+id/iv_img"
        android:background="@drawable/icon_thunder"
        android:layout_width="35dp"
        android:layout_height="35dp" />

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/iv_img"
        android:id="@+id/tv_store_name"
        android:text="store_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="11dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/tv_orderid"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/iv_img"
        android:layout_below="@id/tv_store_name"
        android:text="orderid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/iv_img"
        android:layout_below="@id/tv_orderid"
        android:id="@+id/tv_pay_time"
        android:text="pay_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/tv_pay_money"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textColor="#ff0000"
        android:text="$pay_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_below="@id/tv_pay_time"
        android:background="#888888"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />

</RelativeLayout>